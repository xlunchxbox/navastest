<div class="large-8 columns">
	<div class="row">
		<%= will_paginate @moonwalks %>
		<% @moonwalks.each do |moonwalk| %>
		<div class="large-4 small-12 columns">
			<%= image_tag moonwalk.image_url(:thumb).to_s %>
	  <!-- TEST LINK FOR IMAGE SIZE -->
	  <!-- <img src="http://placehold.it/500x500&text=Site Owner"> -->
	  <div class="panel">
		  <h5><%= link_to moonwalk.name, moonwalk %></h5>
		  <h6 class="subheader"><%= number_to_currency_br(moonwalk.cost) %> per day</h6>
		  
		  <% if signed_in?%>
		  <%= link_to 'Edit', edit_moonwalk_path(moonwalk) %>
		  <td><%= link_to 'Delete', moonwalk, method: :delete%></td>
		  <% end %>
	  </div>
	</div>
  <% end %>

<br/>

</div></div>
<% link_to 'New Moonwalk', new_moonwalk_path %>

